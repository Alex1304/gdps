{% extends 'base.html.twig' %}

{% block content %}
	{% for comment in comments %}
		{% if showLevelID %}
			1~{{ comment.level.id }}~
		{% endif %}
		2~{{ comment.content }}~
		3~{{ comment.author.id }}~
		4~{{ comment.likes }}~
		5~0~
		7~{% if comment.likes < -3 %}1{% else %}0{% endif %}~
		9~{{ timeFormatter.format(comment.postedAt) }}~
		6~{{ comment.id }}~
		10~{{ comment.percent }}
		{% if 'ROLE_ELDERMOD' in comment.author.roles %}~11~2~12~75,255,75{% endif %}
		:
		1~{{ comment.author.name }}~
		7~1~
		9~{{ comment.author.icon }}~
		10~{{ comment.author.color1 }}~
		11~{{ comment.author.color2 }}~
		14~{{ comment.author.iconType }}~
		15~{{ comment.author.special }}~
		16~{% if comment.author.account %}{{ comment.author.account.id }}{% else %}0{% endif %}
		{% if not loop.last %}|{% endif %}
	{% endfor %}
	#
	{{ total }}:{{ page * count }}:{{ count }}
{% endblock %}