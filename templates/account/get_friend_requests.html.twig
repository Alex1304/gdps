		9:{{ account.player.icon }}:
		10:{{ account.player.color1 }}:
		11:{{ account.player.color2 }}:
		14:{{ account.player.iconType }}:
		15:{{ account.player.special }}:
		16:{{ account.id }}:
		32:{{ fr.id }}:
		35:{{ fr.message }}:
		41:{% if fr.isUnread %}1{% else %}0{% endif %}:
